<div class="fixed bottom-0 left-0 w-full justify-center mx-auto bg-white border-gray-200 p-2 flex items-center">
  <%= form_with(
        model: [@chat_room, Chat.new],
        local: false,
        method: :post,
        class: "mx-10 w-full",
        data: {
          controller: "chat-form",
        }
      ) do |f| %>
    <%= f.text_field :content,
                     id: "chat_content",
                     placeholder: "Type a message...",
                     data: {
                       chat_form_target: "input",
                       action: "keypress->chat-form#handleKeyPress"
                     },
                     class: "block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 text-base focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
    %>
  <% end %>
</div>